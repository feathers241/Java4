<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">
	<persistence-unit name = "PolyOE">
	
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>Entity.Users</class>
		<class>Entity.Favorite</class>
		<class>Entity.Share</class>
		<class>Entity.Video</class>
		
		
		<properties>
			<property name = "javax.persistence.jdbc.driver" value = "com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
			<property name = "javax.persistence.jdbc.url" value = "jdbc:sqlserver://localhost:1433;databaseName=PolyOE;encrypt=false"/>
			<property name = "javax.persistence.jdbc.user" value = "sa"/>
			<property name = "javax.persistence.jdbc.password" value = "123"/>

            <!-- Tự động update table nếu cần -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            
		</properties>
	</persistence-unit>
</persistence>